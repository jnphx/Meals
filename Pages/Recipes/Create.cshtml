@page
@model WeeklyMeals.Pages.Recipes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add Recipe</h1>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Recipe.Name" class="control-label"></label>
                <input asp-for="Recipe.Name" class="form-control" />
                <span asp-validation-for="Recipe.Name" class="text-danger"></span>
            </div>
            <input type="file" name="file_Uploader" />
            <div class="form-group">
                <label asp-for="Recipe.ImageUrl" class="control-label"></label>
                <input asp-for="Recipe.ImageUrl" class="form-control" />
                <span asp-validation-for="Recipe.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.NumberServings" class="control-label"></label>
                <input asp-for="Recipe.NumberServings" class="form-control" />
                <span asp-validation-for="Recipe.NumberServings" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
