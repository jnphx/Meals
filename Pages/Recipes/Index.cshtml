@page
@model WeeklyMeals.Pages.Recipes.IndexModel
@{
    ViewData["Title"] = "All Recipes";
}

<!--<a asp-page="/Recipes/Create">
    <input type="button" value="Add Recipe" />
</a>-->

<div class="row float-right mr-5 pt-2">
    <a asp-page="/Recipes/Create" class="btn btn-primary"><i class="fa fa-plus"></i> Add Recipe</a>
</div>

<div class="row justify-content-center">
    <div style="margin-top: 20px; margin-left: auto; margin-right: auto; padding-bottom: 40px;">
        <div class="card-deck">
            @foreach (var recipe in Model.Recipes)
            {
                <div class="card" style="margin-left: 7px; margin-right: 0px;">
                    <a class="card-block stretched-link text-decoration-none" asp-page="/Recipes/Details" asp-route-ID="@recipe.RecipeID"></a>
                    <img class="card-img-top" src="@Url.Content(@recipe.ImageUrl)" />
                    <div class="card-body">
                        <div class="title">@recipe.Name</div>
                        <div class="recipe-additional-info">#Servings: @recipe.NumberServings</div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
